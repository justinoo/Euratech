{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <h1 class="display-4 text-center">Connexion</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="row">
            <div class="col-md-6 col-sm-12 mx-auto">
                <div class="form-group">
                    <input
                        id="login" 
                        placeholder="Adresse email" 
                        required 
                        name="_username"
                        type="text" 
                        class="form-control"
                    />
                </div>
                <div class="form-group">
                    <input
                        id="login"
                        placeholder="Mot de passe" 
                        required 
                        name="_password"
                        type="password" 
                        class="form-control"
                    />
                </div>
                <div class="container text-center ">
                    <button type="submit" class="btn btn-info mt-3 mb-5">Connexion</button>
                </div>
            </div>
        </div>
    </form>
</div>





{% endblock %}