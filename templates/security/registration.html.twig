{% extends "base.html.twig" %}

{% block body %}
    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'label': 'Pseudo','attr' : {'placeholder': 'Votre pseudo'}}) }}
    {{ form_row(form.email, {'label': 'email','attr' : {'placeholder': 'Votre email'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe','attr' : {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmez le mot de passe','attr' : {'placeholder': 'Mot de passe'}}) }}
    <button type="submit" class="btn btn-info">Inscription</button>
    {{ form_end(form) }}
{% endblock %}